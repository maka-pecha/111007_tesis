<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/stars.css">

<div class="row">
    <div class="cardCustom col-md-6 offset-md-3 col-xl-4 offset-xl-4">
        <div id="userCarousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <% user.image.forEach((img, i) => { %>
                    <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                        <img src="<%= img.url %>" class="d-block w-100" alt="User's image">
                    </div>
                <% }) %>
            </div>
            <% if(user.image.length > 1) { %>
                <a class="carousel-control-prev" href="#userCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#userCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            <% } %>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item"><h5 class="card-title capitalize-text"><%= user.username %></h5></li>
            <li class="list-group-item"><p class="card-text"><%= user.email %></p></li>
        </ul>
        <div class="card-body">
            <% if(currentUser) { %>
                <a class="card-link btn btn-info" href="/users/<%= user._id %>/edit">Edit</a>
                <% if(currentUser.isAdmin) { %>
                    <form class="d-inline" action="/users/<%= user._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                <% } %>
            <% } %>
        </div>
        <div class="card-footer text-muted mb-3">
            <%= date %>
        </div>
    </div>
</div>
