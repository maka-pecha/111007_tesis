<% layout('layouts/boilerplate')%>
<link rel="stylesheet" href="/stylesheets/stars.css">
<div class="row">
    <div class="col-md6 offset-md-3 col-xl-4 offset-xl-4">
        <div id="placeCarousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <% user.image.forEach((img, i) => {  %>
                    <div class="carousel-item <%= i === 0 ? 'active' : ''%>">
                        <img src="<%= img.url%>" class="d-block w-100" alt="">
                    </div>
                <% }) %>
            </div>
            <% if(user.image.length > 1) {%>
                <a class="carousel-control-prev" href="#placeCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#placeCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            <% } %>
        </div>
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title"><%=user.username%></h5>
                <p class="card-text"><%=user.email%></p>
            </div>
            <div class="card-body">
                <a class="card-link btn btn-info" href="/users/<%=user._id%>/edit">Edit</a>
                <% if(currentUser && currentUser.isAdmin) { %>
                <form class="d-inline" action="/places/<%=user._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>
                <% } %>
            </div>
            <div class="card-footer text-muted">
                <%=date%>
            </div>
        </div>
    </div>
</div>

<script>
    const user = <%- JSON.stringify(user) %>
</script>
