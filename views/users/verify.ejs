<% layout('layouts/boilerplate')%>

<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img src="https://res.cloudinary.com/ddsxauxqi/image/upload/v1686794079/DonateOnNetwork/undraw_Authentication_re_svpt_zxh0tq.png"
                    alt="" class="card-img-top" />
                <div class="card-body">
                    <h5 class="card-title">Verify</h5>
                    <div class="card-body">
                        <% if(verify) {%>
                        <h5 class="card-title">The user was successfully verified</h5>
                        <a href="/login">Back to Login</a>
                        <% } else {%>
                        <h5 class="card-title">Incorrect verification!</h5>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
