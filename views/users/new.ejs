<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">New User</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/users" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="username">Username</label>
                <input class="form-control" type="text" id="username" name="user[username]"
                       required autofocus>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="email">Email</label>
                <input class="form-control" type="email" id="email" name="user[email]"
                       required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <% if(currentUser && currentUser.isAdmin) { %>
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="isAdmin" value="true" name="user[isAdmin]">
                    <label class="form-check-label" for="isAdmin">Is Admin?</label>
                </div>
            <% } %>
            <div class="mb-3">
                <div class="form-file custom-file">
                    <input type="file" class="form-file-input" id="image" name="image">
                    <label class="form-file-label" for="image">
                        <span class="form-file-text custom-file-label">Choose image...</span>
                        <span class="form-file-button">Browse</span>
                    </label>
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Create User</button>
            </div>
        </form>
        <a href="/users">All Users</a>
    </div>
</div>
